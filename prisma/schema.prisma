  createdAt      DateTime  @default(now())
  expiresAt      DateTime?
  disposedAt     DateTime?  // âœ… íê¸°ì¼ ì¶”ê°€
  type           String    @default("standard")
  metadata       Json?
  userId         Int?
  activatedUntil DateTime?
  user           User?     @relation(fields: [userId], references: [id])
  @@index([code])
  @@index([userId])
  @@index([disposedAt])  // âœ… íê¸°ì¼ ê²€ìƒ‰ ë¹ ë¥´ê²Œ í•˜ë ¤ê³  ì¸ë±ìŠ¤ ì¶”ê°€í•´ë„ ì¢‹ìŒ
}

model Category {
