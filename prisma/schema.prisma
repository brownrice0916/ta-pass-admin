  @@unique([categoryId, name])
}

model EmailVerification {
  id        String   @id @default(uuid())
  email     String   @unique
  code      String
  verified  Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum VerificationStatus {
  pending
  approved
  rejected
}

enum PaymentStatus {
  unpaid
  paid
}

enum PaymentPlan {
  single
  multi
  special
}

