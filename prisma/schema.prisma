}

model SubCategory {
  id         String      @id @default(cuid())
  name       String                         // ì˜ˆ: ì¼ì‹, ì–‘ì‹
  key        String                         // ì˜ˆ: japanese, western
  categoryId String
  category   Category    @relation(fields: [categoryId], references: [id])
  restaurants Restaurant[]
